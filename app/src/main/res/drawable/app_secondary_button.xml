<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/app_dark_blue"
                android:endColor="@color/app_light_blue" />
            <corners android:radius="@dimen/app_button_radius"/>
        </shape>
    </item>
    <item
        android:top="@dimen/app_button_stroke_width"
        android:bottom="@dimen/app_button_stroke_width"
        android:left="@dimen/app_button_stroke_width"
        android:right="@dimen/app_button_stroke_width">
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/>
            <corners android:radius="11dp"/>
        </shape>
    </item>
</layer-list>